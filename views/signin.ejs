<div class="container">
	<h2>Sign In</h2>
	<h4><%=message%></h4>
	<form action="/signin" method="POST" class="form">
		<div class="form-group">
			<label for="email">Email: </label>

			<input
				type="email"
				class="form-control"
				id="email"
				name="email"
				required
			/>
		</div>
		<div class="form-group">
			<label for="password">Password: </label>
			<input
				type="password"
				class="form-control"
				id="password"
				name="password"
				required
			/>
		</div>
		<button type="submit" >Sign In</button>
		<p>OR</p>
	</form>
	<div class="google" onclick="getGoogleAuth()">
		<i class="fa-brands fa-google"></i>
		<p class="text">Sign in with Google</p>
	</div>
</div>
